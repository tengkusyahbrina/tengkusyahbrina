#include<iostream>
using namespace std;

int main()
{
    int a,b;
    
    //assignment operator
    a=5;
    b=7;
    
    //arithmatic operator
    // int tambah=a+b;
    // int kurang=a-b;
    // int kali=a*b;
    // float bagi=a/b;
    // int mod=a%b;
    
    // cout<<"a+b="<<tambah<<endl;
    // cout<<"a-b="<<kurang<<endl;
    // cout<<"a*b="<<kali<<endl;
    // cout<<"a/b="<<bagi<<endl;
    // cout<<"a%b="<<mod<<endl;
        
        
    //relational operator
    // cout<<(a==b)<<endl;
    // cout<<(a<b)<<endl;
    // cout<<(a<=b)<<endl;
    // cout<<(a>b)<<endl;
    // cout<<(a>=b)<<endl;
    // cout<<(a!=b)<<endl;
    
    //logical
    // cout<<(true&&true)<<endl;
    // cout<<(true&&false)<<endl;
    // cout<<(false&&true)<<endl;
    // cout<<(false&&false)<<endl;
    
    // cout<<(true||true)<<endl;
    // cout<<(true||false)<<endl;
    // cout<<(false||true)<<endl;
    // cout<<(false||false)<<endl;
    
    // cout<<!true<<endl;
    // cout<<!false<<endl;
    
    //bitwise
    // cout<<(4&7)<<endl;
    // cout<<(4|7)<<endl;
    // cout<<(4^7)<<endl;
    // cout<<(~4)<<endl;
    // cout<<(7<<2)<<endl;
    // cout<<(7>>2)<<endl;
    
    //shorthand
    a = a+2;
    a +=2;
    a -=2;
    a *=2;
    a /=2;
    
    b = b+3;
    b +=3;
    b -=2;
    b *=2;
    b /=2;
    
    
    //increment & Decrement
    //post increment
    
    cout<<a++<<endl;
    cout<<a<<endl;
    
    //pre increment
    
    cout<<a<<endl;
    cout<<++a<<endl;
    
    //post decrement
    
    cout<<b--<<endl;
    cout<<b<<endl;
    
    //pre decrement
    
    cout<<b<<endl;
    cout<<--b<<endl;
    
    a++;
    a--;
    b++;
    b--;

}
